    "@types/node": "^18.14.5",
    "prisma": "^4.11.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^3.14.2",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "express": "^4.18.2",
    "module-alias": "^2.2.2",
    "prismix": "^1.0.22"
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
